<article id="contacts">
  <section>
    <ul class='list' role='list'>
      {{#each controller}}
      <li class='comp' data-goto="some-id">
        {{#link-to 'contacts.show' this classNames="comp"}}{{firstName}}

            <div>
              <h3>{{username}}</h3>
            </div>
            <aside>
              <h4>{{display_name}}</h4>
              <span class='nav'></span>
            </aside>
        {{/link-to}}
        </li>
      {{/each}}
    </ul>
  </section>
</article>
