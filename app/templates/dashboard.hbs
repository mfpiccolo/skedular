<article id='main'>
  <section>
    <ul>
    <div class="small-block-grid-3 medium-block-grid-3">
      <h3>Receivables</h3>
      <div class="row">
        <div class="small-6 columns home-square">
          <li data-goto="approved-receivables">
            <h4>Approved</h4>
            <div class="money credit" {{action "goTo" "payments"}}>{{approved_receivables}}</div>
          </li>
        </div>
        <div class="small-6 columns home-square">
          <li data-goto="unapproved-receivables">
            <h4>Unapproved</h4>
            <div class="money credit">{{unapproved_receivables}}</div>
          </li>
        </div>
      </div>
      <h3>Payables</h3>
      <div class="row">
        <div class="small-6 columns home-square">
          <li data-goto="approved-payables">
            <h4>Approved</h4>
            <div class="money debit">{{approved_payables}}</div>
          </li>
        </div>
        <div class="small-6 columns home-square">
          <li data-goto="unapproved-payables">
            <h4>Unapproved</h4>
            <div class="money debit">{{upapproved_payables}}</div>
          </li>
        </div>
      </div>
      <h3>Totals</h3>
      <div class="row">
        <div class="small-6 columns home-square">
          <li data-goto="approved">
            <h4>Available</h4>
            <div class="money credit">{{balance}}</div>
          </li>
        </div>
        <div class="small-6 columns home-square">
          <h4>Net Snapshot</h4>
          <div class="money credit">65.00</div>
        </div>
      </div>
    </div>
    </ul>
    <br><br>
    <a class="dwolla-button button action" href="/users/auth/venmo">+ Connect Venmo</a>
  </section>
</article>
